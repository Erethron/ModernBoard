<Window x:Class="ModernBoard.ImportPGN"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModernBoard"
        mc:Ignorable="d"
		  WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow"
        Title="Import PGN" Height="500" Width="700">
	<DockPanel>
		<Border Background="LightBlue" DockPanel.Dock="Top">
			<TextBlock FontSize="18" FontWeight="Bold"
			           HorizontalAlignment="Center" Margin="10" TextWrapping="Wrap"
			           Text="Paste the PGN data into the textbox below"/>
		</Border>
		<Border DockPanel.Dock="Bottom">
			<StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
				<Button Width="80" Height="25" Content="OK" Margin="10" Click="Ok_Clicl" />
				<Button Width="80" Height="25" Content="Cancel" Margin="10" IsCancel="True"/>
			</StackPanel>
		</Border>
		<TextBox FontFamily="Consolas" Name="PgnData" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" TextWrapping="Wrap" />
	</DockPanel>
</Window>
